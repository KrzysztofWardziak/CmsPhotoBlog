@using Microsoft.EntityFrameworkCore.Internal
@model CmsPhotoBlog.ViewModels.Blog.BlogDetailsVm

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

<br />

<div class="row">
    <div class="col-xs-12 col-md-4">
        <img src="/Images/Uploads/Blogs/@Model.Id/thumbs/@Model.ImageName" />
    </div>
    <div class="col-xs-12 col-md-8">
        @Html.DisplayFor(model => model.Title)
        <br />
        @Html.DisplayFor(model => model.Description)
        <br />
        @Html.DisplayFor(model => model.Date)
    </div>
</div>

<hr />

<div>
    <h3>Zdjęcia</h3>


    <div class="col-xs-12 fancyboxdiv">
        <br /><br />
        
        @if (Model.GalleryImages.Count() < 1)
        {
            <h4>Brak zdjęć dla tego wpisu.</h4>
        }
        else
        {
            foreach (var image in Model.GalleryImages)
            {
                
                <div style="display: inline-block">
                    <a class="fancybox" rel="gallery1" href="/Images/Uploads/Blogs/@Model.Id/Gallery/@image">
                        <img src="/Images/Uploads/Blogs/@Model.Id/Gallery/Thumbs/@image" />
                    </a>
                </div>
            }
        }
    </div>
</div>

<link href="~/Content/jquery.fancybox.css" rel="stylesheet" />

@section scripts
{
    <script src="~/Scripts/jquery.fancybox.js"></script>
    <script>
        $(function () {

            // FancyBox nuget
            $(".fancybox").fancybox();
            ///////////////////////////////////



        });


    </script>

}
