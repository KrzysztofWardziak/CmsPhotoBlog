@model IEnumerable<CmsPhotoBlog.ViewModels.Blog.BlogDetailsVm>

@{
    ViewBag.Title = ViewBag.CategoryName;
}

<h2>@ViewBag.CategoryName</h2>

<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Tytuł
        </th>
        <th>
            Opis
        </th>
        <th>
            Zdjęcie
        </th>
        <th>
            Data utworzenia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a href="/blog/blog-szczegoly/@item.Slug">
                <img src="/Images/Uploads/Blogs/@item.Id/Thumbs/@item.ImageName"/>
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            <a href="/blog/blog-szczegoly/@item.Slug">Szczegóły</a>
        </td>
    </tr>
}

</table>
